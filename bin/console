#!/usr/bin/env ruby
require 'irb'
# require_relative '../shotgun'
require_relative '../app'

@client = CFoundry::Client.get User.api_url
puts 'Loaded client on @client'
@client.login :username => 'manuel.garcia@altoros.com', :password => '12345678'
puts 'Authenticated with manuel.garcia@altoros.com'
@space = @client.spaces.first
puts 'Fetched first space on @space'
@app = @space.apps.first
puts "Fetched first app from #{@space.name} on @app"
@metal = MetalFoundry.new(@client)
puts "Loaded MetalFoundry on @metal"

ARGV.clear
IRB.start
