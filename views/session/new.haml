- if flash? :alert
  #flash-error
    = flash :alert

%form.pure-form.pure-form-aligned{:name => 'session', :id => 'session',
      :action => '/sessions', :method => 'post'}

  %fieldset
    .pure-control-group

      %label{:for => "email"} Email
      %input{:type => "email", :name => "email", :placeholder => "Email"}

    .pure-control-group    
      %label{:for => "password"} Password
      %input{:type => "password", :name => "password", :placeholder => "Password"}

    .pure-controls    
      %input.pure-button.pure-button-primary{:type => "submit", :value => "Sign in", :class => "button"}
