%h4
  Info
  %span.pull-right{:class => app_label_state_class(@app)}
    = @app.state


%hr

.app-show-stop.span6.pull-right.centered
  %form{:action => app_path(@space, @app), :method => 'post', :class => 'simple-button'}
    %input{:type => 'hidden', :value => 'put', :name => '_method'}
    %input{:type => 'hidden', :value => 'STOPPED', :name => 'state'}
    %button{:type => 'submit',
            :id => app_state_class(@app),
            :class => (app_power_control_button_class(@app) + ' btn-large wait-trigger'),
            :title => 'Start/Stop Application'}
      %i.icon-off


#app-health{:title => 'Health: Instances running divided by total instances'}
  #monitor-label Health
  %form{:action => '#', :autocomplete => 'off'}
    %input#health-current{:type => 'hidden', :value => app_health(@app, @stats)}
    %input#health-monitor{:type => 'text', :value => 0, :disabled => true, 'data-width' => '100', 'data-height' => '100'}

#app-memory
  #app-mem-form
    %form{:action => app_path(@space, @app), :method => 'post'}
      .input-append
        .input-prepend.input-append
          %span.add-on.span3 Memory
          %select#appendedInputButton{:name => 'memory'}
            - (7..14).each do |mem|
              - if 2**mem == @app.memory
                %option.current-app-mem{:value => 2**mem, :selected => true}= 2**mem
              - else
                %option{:value => 2**mem}= 2**mem
          %button.btn.wait-trigger{:type => 'submit'} Update

#app-instances
  #instance-quota
    %form{:action => app_path(@space, @app), :method => 'post'}
      .input-prepend.input-append
        %span.add-on.span3 Instances
        %select#appendedInputButton{:name => 'instances'}
          - 20.times do |n|
            - if n == @app.total_instances
              %option.current-instances{:value => n, :selected => true}= n
            - else
              %option{:value => n}= n
        %button.btn.wait-trigger{:type => 'submit'} Update
