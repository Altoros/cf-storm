#app-uris.well
  %h4 URL List
  %hr
  %table.table
    - @routes.each do |route|
      %tr
        %td
          %a{:href => "http://#{route.name}", :target => '_blank'}= "http://#{route.name}"
        %td.span3
          %form{:action => app_path(@space, @app), :method => 'post', :class => 'simple-button'}
            %input{:type => 'hidden', :value => 'delete', :name => '_method'}
            %input{:type => 'hidden', :value => route.guid, :name => 'route_guid'}
            - if @routes.size == 1
              %a{:id => "unmap-#{route.guid}",
               :class => "btn btn-danger trigger-unmap-confirmation",
               :title => 'Remove route',
               :href => '#none'}
                %i.icon-trash
              %button.wait-trigger{:type => 'submit',
               :class => "btn btn-danger unmap-confirmed",
               :style => 'display: none;',
               :title => 'It is the last route, are you really really sure?' }
                Really?
            - else
              %button{:type => 'submit',
               :id => "unmap-#{route.guid}",
               :class => "btn btn-danger",
               :title => 'Remove route'}
                %i.icon-trash


  %form{:action => app_path(@space, @app), :method => 'post'}
    .input-prepend.input-append
      %span.add-on URL
      %input{:type => 'text', :name => 'url'}
      %select{:disabled => false, :name => 'domain'}
        - current_user.domains.each do |domain|
          %option{:value => domain.name}= domain.name

      %button.btn.wait-trigger{:type => 'submit'} Add URL
